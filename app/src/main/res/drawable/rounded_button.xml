<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rounded background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#D9D9D9"/> <!-- Default color -->
        </shape>
    </item>

    <!-- Color Overlay (will be changed dynamically) -->
    <item android:id="@+id/colorOverlay">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@android:color/transparent"/> <!-- Initially transparent -->
        </shape>
    </item>
</layer-list>
